<div class="container">
    <div class="row">
        <div class="col-12">
            <h2>Login</h2>
                <%= @error_message if @error_message %>
        </div>
        <div class="col-12">
            <form action="/login" method="POST">
                <div class="form-group">
                    <label for="username" hidden="hidden">Username</label>
                        <input class="inputs center" type="text" id="username" name="username" placeholder="User name" />
                </div>
                <div class="form-group">
                    <label for="password" hidden="hidden">Password</label>
                    <input class="inputs center" type="password" id="password" name="password" placeholder="Password"/>
                </div>
        <div class="col-6">
            <a href="#" class="button">Forgot my password</a>
        </div>
        
        <div class="col-2">
                <div class="form-group">
                    <button type="submit">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>